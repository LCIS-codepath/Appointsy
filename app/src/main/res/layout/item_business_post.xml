<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlItemBusinessPost"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"
        android:background="#F4F0F0"
        android:backgroundTint="#FFFFFF">

        <ImageView
            android:id="@+id/ivBusinessImage"
            android:layout_width="142dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/business_image"
            android:paddingTop="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ivFavorite"
            android:layout_toEndOf="@+id/ivBusinessImage"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Snipz" />

        <TextView
            android:id="@+id/tvBusinessType"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBusinessName"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="23dp"
            android:layout_toEndOf="@+id/ivBusinessImage"
            android:textStyle="bold"
            tools:text="Barber/Barberrette Shop" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_below="@+id/tvBusinessType"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="23dp"
            android:layout_toEndOf="@+id/ivBusinessImage"
            tools:text="The world best business in town" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetails"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:textStyle="bold"
            tools:text="3.2 mi" />

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="21dp"
            android:contentDescription="@string/favorites"
            app:srcCompat="@drawable/ic_not_favorite" />
    </RelativeLayout>
</layout>