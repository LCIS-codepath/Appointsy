<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivAppointmentImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/business_image"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvAppointmentBusinessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/ivAppointmentImage"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvAppointmentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppointmentBusinessName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="57dp"
        android:layout_toEndOf="@+id/ivAppointmentImage"
        android:textStyle="bold"
        tools:text="Time" />

    <TextView
        android:id="@+id/tvAppointmentDetails"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@+id/tvAppointmentTime"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivAppointmentImage"
        tools:text="Details" />

    <TextView
        android:id="@+id/tvAppointmentStatus"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvAppointmentBusinessName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/ivStatusIcon"
        android:textSize="18sp"
        tools:text="Status" />

    <ImageView
        android:id="@+id/ivStatusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/tvAppointmentBusinessName"
        android:contentDescription="@string/indicate_if_business_is_open"
        app:srcCompat="@android:drawable/presence_online" />


</RelativeLayout>