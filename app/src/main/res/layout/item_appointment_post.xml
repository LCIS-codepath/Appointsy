<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:id="@+id/rlAppoinment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#F4F0F0"
        android:backgroundTint="#FFFFFF">

        <ImageView
            android:id="@+id/ivAppointmentImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:contentDescription="@string/business_image"
            android:paddingBottom="5dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvAppointmentBusinessName"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/ivAppointmentImage"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Name" />

        <TextView
            android:id="@+id/tvAppointmentTime"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="27dp"
            android:textStyle="bold"
            tools:text="Time" />

        <TextView
            android:id="@+id/tvAppointmentDetails"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_below="@+id/tvAppointmentTime"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivAppointmentImage"
            tools:text="Details" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAppointmentBusinessName"
            android:layout_marginStart="23dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivAppointmentImage"
            tools:text="Date" />


    </RelativeLayout>
</layout>